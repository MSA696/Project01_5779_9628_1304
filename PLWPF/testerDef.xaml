<Window x:Class="PLWPF.testerDef"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PLWPF"
        mc:Ignorable="d"
        Title="traineeIn" Height="150" Width="400" >
    <Grid>
        <Grid.Background>
            <ImageBrush ImageSource="images/road.jpg" Opacity="0.85"/>
        </Grid.Background>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="50*"/>
            <ColumnDefinition Width="50*"/>
        </Grid.ColumnDefinitions>
        <Button x:Name="addTester" Content="Add Tester" HorizontalAlignment="Center" VerticalAlignment="Center" Width="120" Height="40" FontSize="18" Click="addTester_Click" BorderBrush="Black" Foreground="Black" Background="#FFFF0909"/>
        <Button x:Name="getIn" Content="Log In" Grid.Column="1" HorizontalAlignment="Center" VerticalAlignment="Center" Width="120" Height="40" FontSize="18" Click="getIn_Click" BorderBrush="Black" Foreground="Black" Background="#FFFF0909"/>

    </Grid>
</Window>
